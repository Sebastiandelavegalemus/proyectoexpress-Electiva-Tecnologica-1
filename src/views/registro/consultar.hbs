<div class="col-md-8 mx-auto">
            <div class="card-body">
                <h1 class="text-center">Usuarios</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>                            
                            <th scope="col">Nombre</th>
                            <th scope="col">Correo Electrónico</th>
                            <th scope="col">Contraseña</th>
                            <th scope="col">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each admi}}
                        <tr>
                            <th scope="row">{{id_correo}}</th>                            
                            <td>{{nombre}}</td>
                            <td>{{correo}}</td>
                            <td>{{contraseña}}</td>                                      
                            <td>

                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modificar0{{id_correo}}">
                                Modificar
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="modificar0{{id_correo}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form action="/registro/modificar0/{{id_correo}}" method="POST">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Modificar</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                            </button>
                                            </div>
                                            <div class="modal-body">
                                                    
                                
                                            <div class="form-group">
                                                <label for="exampleFormControlInput1">Nombre</label>
                                                <input type="text" class="form-control" id="exampleFormControlInput1"
                                                    name="Nombre" value="{{nombre}}"> 
                                            </div>

                                            <div class="form-group">
                                                <label for="exampleFormControlInput1">Correo Electrónico</label>
                                                <input type="text" class="form-control" id="exampleFormControlInput1"
                                                    name="Correo Electrónico" value="{{correo}}"> 
                                            </div>

                                            <div class="form-group">
                                                <label for="exampleFormControlInput1">Contraseña</label>
                                                <input type="text" class="form-control" id="exampleFormControlInput1"
                                                    name="Contraseña" value="{{contraseña}}">
                                            </div>                                             
                                            </div>     
                                            <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
                                                    <button type="submit" class="btn btn-primary">Modificar</button>
                                            </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            <a href="delete/{{id_correo}}" class="btn btn-danger">Eliminar</a>                      
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>