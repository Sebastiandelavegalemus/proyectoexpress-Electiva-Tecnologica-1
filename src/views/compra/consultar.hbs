<div class="col-md-8 mx-auto">
            <div class="card-body">
                <h1 class="text-center">Compras</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>                            
                            <th scope="col">Nombre</th>
                            <th scope="col">Numero De Tarjeta</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Codigo</th>
                            <th scope="col" class="text-center">Acci√≥n</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each peri}}
                        <tr>
                            <th scope="row">{{id_compra}}</th>                            
                            <td>{{nombre}}</td>
                            <td>{{numero_tarjeta}}</td>
                            <td>{{fecha}}</td>
                            <td>{{codigo}}</td>             
                            <td>

                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modificar6{{id_compra}}">
                                Modificar
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="modificar6{{id_compra}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form action="/compra/modificar6/{{id_compra}}" method="POST">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Modificar</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                            </button>
                                            </div>
                                            <div class="modal-body">
                                                    
                                
                                            <div class="form-group">
                                                <label for="exampleFormControlInput1">Nombre</label>
                                                <input type="text" class="form-control" id="exampleFormControlInput1"
                                                    name="nombre" value="{{nombre}}"> 
                                            </div>

                                            <div class="form-group">
                                                <label for="exampleFormControlInput1">Numero De Tarjeta</label>
                                                <input type="text" class="form-control" id="exampleFormControlInput1"
                                                    name="numero_tarjeta" value="{{numero_tarjeta}}"> 
                                            </div>

                                            <div class="form-group">
                                                <label for="exampleFormControlInput1">Fecha</label>
                                                <input type="password" class="form-control" id="exampleFormControlInput1"
                                                    name="fecha" value="{{fecha}}" >
                                            </div>

                                            <div class="form-group">
                                                <label for="exampleFormControlInput1">Codigo</label>
                                                <input type="password" class="form-control" id="exampleFormControlInput1"
                                                    name="codigo" value="{{codigo}}" >
                                            </div>  

                                            </div>     
                                            <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
                                                    <button type="submit" class="btn btn-primary">Modificar</button>
                                            </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            <a href="delete/{{id_compra}}" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

